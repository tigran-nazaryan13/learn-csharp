@page
@model StudentDashboard.Pages.IndexModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Student Dashboard</title>
    <style>
        :root {
            --primary-color: #4a90e2;
            --accent-color: #2c3e50;
            --bg-light: #f8f9fa;
            --bg-white: #ffffff;
            --text-dark: #2d2d2d;
            --border-light: #e0e0e0;
            --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--bg-light);
            padding: 3em 2em;
            color: var(--text-dark);
        }

        h1 {
            text-align: center;
            font-size: 2.5em;
            margin-bottom: 1.5em;
            color: var(--accent-color);
            animation: fadeSlideDown 0.8s ease-in-out;
        }

        .form {
            background-color: var(--bg-white);
            padding: 2em;
            border-radius: 12px;
            box-shadow: var(--shadow-light);
            max-width: 900px;
            margin: 0 auto 2.5em;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 1em;
            align-items: center;
            animation: fadeIn 1s ease-in;
        }

        .form input, .form select {
            padding: 0.8em;
            border-radius: 8px;
            border: 1px solid var(--border-light);
            font-size: 1em;
            transition: all 0.3s ease;
        }

        .form input:focus, .form select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.3);
            outline: none;
        }

        .form button {
            grid-column: span 2;
            padding: 0.8em;
            background-color: var(--primary-color);
            color: #fff;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .form button:hover {
            background-color: #357abd;
            transform: scale(1.05);
        }

        table {
            width: 95%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: var(--bg-white);
            border-radius: 12px;
            box-shadow: var(--shadow-light);
            overflow: hidden;
        }

        th, td {
            padding: 1em;
            border-bottom: 1px solid var(--border-light);
            text-align: center;
        }

        th {
            background-color: #eef3f8;
            color: var(--accent-color);
            font-weight: 600;
        }

        tbody tr {
            animation: fadeSlideUp 0.6s ease both;
            transition: transform 0.3s ease;
        }

        tr:hover {
            background-color: #f4f8fb;
            transform: scale(1.01);
        }

        .passed {
            color: #27ae60;
            font-weight: 600;
        }

        .failed {
            color: #e74c3c;
            font-weight: 600;
        }

        .honors {
            color: #4a90e2;
            font-weight: 700;
        }

        td form button {
            padding: 0.5em 1em;
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9em;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        td form button:hover {
            background-color: #c0392b;
            transform: scale(1.05);
        }

        @@media (max-width: 700px) {
            .form {
                grid-template-columns: 1fr;
            }

            .form button {
                grid-column: span 1;
            }

            table, thead, tbody, th, td, tr {
                font-size: 0.9em;
            }
        }

        /* Animation Keyframes */
        @@keyframes fadeSlideUp {
            0% {
                opacity: 0;
                transform: translateY(10px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeSlideDown {
            0% {
                opacity: 0;
                transform: translateY(-15px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
</head>
<body>
    <h1>Student Management Dashboard</h1>

    <form method="post" class="form">
        <input type="text" name="Name" placeholder="Student Name" required />
        <input type="number" name="Age" placeholder="Age" required />
        <input type="number" name="Grade" placeholder="Grade" step="0.1" required />
        <select name="Type">
            <option value="Student">Student</option>
            <option value="Honors">Honors Student</option>
        </select>
        <button type="submit" asp-page-handler="Add">➕ Add Student</button>
    </form>

    <table>
        <thead>
            <tr><th>Name</th><th>Age</th><th>Grade</th><th>Status</th><th>Action</th></tr>
        </thead>
        <tbody>
        @for (int i = 0; i < IndexModel.Students.Count; i++)
        {
            var s = IndexModel.Students[i];
            var status = s.GetStatus();
            string css = status == "Honors" ? "honors" : status == "Passed" ? "passed" : "failed";
        <tr>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>@s.Grade</td>
            <td class="@css">@status</td>
            <td>
                <form method="post">
                    <input type="hidden" name="index" value="@i" />
                    <button type="submit" asp-page-handler="Delete">🗑 Delete</button>
                </form>
            </td>
        </tr>
        }
        </tbody>
    </table>
</body>
</html>
